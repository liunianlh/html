<?php
//通过foreach遍历数组
/*
   foreach分为两种形式
   只要键值的情况
   foreach($数组名称 as $val){
    循环体;
    }
    既要键名又要键值的情况
    foreach($数组名称 as $key=>$val){
      循环体;
  }
 */
 $arr=[
   5=>'a',
   12=>'b',
   -123=>'c',
   34=>'d'
 ];
 //print_r($arr);
 foreach($arr as $v){
   echo $v,'<br/>';
    echo '<h1>hello world</h1>';
 }
 foreach($arr as $k=>$v){
   echo $k,'--',$v,'<br/>';
 }
